<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MindwavE.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MindwavE"
    Title="MindwavE">

    <!-- Welcome Screen (shown first) -->
    <ShellContent Route="WelcomePage" ContentTemplate="{DataTemplate local:WelcomePage}" Shell.TabBarIsVisible="False" />

    <!-- Main App Tab Bar (visible after Welcome) -->
    <TabBar Route="MainTabs">
        <ShellContent Title="Početna" Icon="menu_icon.png" ContentTemplate="{DataTemplate local:HomePage}" Route="HomePage" />
        <ShellContent Title="Chat" Icon="message_icon.png" ContentTemplate="{DataTemplate local:ChatPage}" Route="ChatPage" />
        <ShellContent Title="Zakazano" Icon="calendar_icon.png" ContentTemplate="{DataTemplate local:AppointmentsPage}" Route="AppointmentsPage" />
        <ShellContent Title="Praćenje" Icon="profile_icon.png" ContentTemplate="{DataTemplate local:TrackingPage}" Route="TrackingPage" />
    </TabBar>

</Shell>
