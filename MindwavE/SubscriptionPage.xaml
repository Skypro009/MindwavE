<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MindwavE.SubscriptionPage"
             Title="Subscription"
             BackgroundColor="#F5F5F5">
    <ContentPage.Content>
        <VerticalStackLayout Spacing="20" Padding="30" VerticalOptions="Center">

            <Label Text="Premium Access" 
                   FontSize="28" 
                   FontAttributes="Bold" 
                   FontFamily="NunitoSans"
                   HorizontalOptions="Center" 
                   TextColor="#333333"/>

            <Label x:Name="StatusLabel"
                   Text="Current Status: Checking..."
                   FontSize="18"
                   FontFamily="NunitoSans"
                   HorizontalOptions="Center"
                   TextColor="#666666"/>

            <Label x:Name="ExpiryLabel"
                   Text=""
                   FontSize="14"
                   HorizontalOptions="Center"
                   TextColor="#888888"
                   IsVisible="False"/>

            <Frame CornerRadius="10" Padding="20" BackgroundColor="White" HasShadow="True">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Pro Plan" FontSize="22" FontAttributes="Bold" TextColor="#512BD4"/>
                    <Label Text="• Unlimited AI Chat" TextColor="#333"/>
                    <Label Text="• Advanced Analytics" TextColor="#333"/>
                    <Label Text="• Priority Support" TextColor="#333"/>

                    <Button x:Name="SubscribeButton"
                            Text="Subscribe ($9.99/mo)"
                            Clicked="OnSubscribeClicked"
                            BackgroundColor="#512BD4"
                            TextColor="White"
                            CornerRadius="20"
                            Margin="0,20,0,0"/>
                </VerticalStackLayout>
            </Frame>

            <Button
                Text="Izađi"
                TextColor="White"
                FontFamily="NunitoSans"
                FontSize="15"
                CornerRadius="20"
                WidthRequest="80"
                HorizontalOptions="Center"
                x:Name="ExitBtn"
                Clicked="GoBackToMainPage"
                />

            <ActivityIndicator x:Name="LoadingIndicator" IsRunning="False" IsVisible="False" Color="#512BD4"/>

        </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage>