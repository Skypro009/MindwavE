<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MindwavE.LoadingPage"
             BackgroundColor="#F5F5F5">
    <ContentPage.Content>
        <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center" Spacing="20">
            <ActivityIndicator IsRunning="True" Color="#512BD4" HeightRequest="50" WidthRequest="50" />
            <Label Text="Loading..." TextColor="#666666" HorizontalOptions="Center" />
        </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage>
