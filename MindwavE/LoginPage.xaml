<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MindwavE.LoginPage"
             Title="Login"
             Shell.NavBarIsVisible="False"
             Shell.FlyoutBehavior="Disabled"
             BackgroundColor="#F5F5F5">
    <ScrollView>
        <VerticalStackLayout Spacing="25" Padding="30" VerticalOptions="Center">
            
            <Image Source="mindwave_assistant_icon.png"
                   HeightRequest="100"
                   WidthRequest="100"
                   HorizontalOptions="Center" />

            <Label Text="Welcome Back"
                   FontSize="28"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="#333333"/>
            
            <Label Text="Sign in to continue"
                   FontSize="16"
                   HorizontalOptions="Center"
                   TextColor="#666666"/>

            <Entry x:Name="EmailEntry"
                   Placeholder="Email"
                   Keyboard="Email"
                   TextColor="Black"
                   PlaceholderColor="Gray"
                   HeightRequest="50" />

            <Entry x:Name="PasswordEntry"
                   Placeholder="Password"
                   IsPassword="True"
                   TextColor="Black"
                   PlaceholderColor="Gray"
                   HeightRequest="50" />

            <Button Text="Login"
                    Clicked="OnLoginClicked"
                    BackgroundColor="#512BD4"
                    TextColor="White"
                    CornerRadius="25"
                    HeightRequest="50"
                    FontAttributes="Bold"/>

            <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Spacing="5">
                <Label Text="Don't have an account?" TextColor="#666666" VerticalOptions="Center"/>
                <Label Text="Sign Up" 
                       TextColor="#512BD4" 
                       FontAttributes="Bold"
                       VerticalOptions="Center">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnRegisterTapped"/>
                    </Label.GestureRecognizers>
                </Label>
            </StackLayout>
            
            <ActivityIndicator x:Name="LoadingIndicator" 
                               IsRunning="False" 
                               IsVisible="False" 
                               Color="#512BD4"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
