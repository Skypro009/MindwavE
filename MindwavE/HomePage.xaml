<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MindwavE.HomePage"
             BackgroundColor="#F5F5F5">
    <Grid RowDefinitions="Auto, *, Auto">
        <!-- Top Section: Header with Chat, Settings -->
        <Grid Grid.Row="0" ColumnDefinitions="*, Auto, Auto" Padding="20,30,20,10" VerticalOptions="Start">
            <!-- Chat with AI Button -->
            <Frame Grid.Column="0" CornerRadius="20" HasShadow="False" BackgroundColor="White" Padding="10,5" Margin="0,0,10,0" HorizontalOptions="FillAndExpand">
                <StackLayout Orientation="Horizontal" Spacing="5" VerticalOptions="Center">
                    <Image Source="ai_chat_icon.png" HeightRequest="20" WidthRequest="20" VerticalOptions="Center"/>
                    <Label Text="Razgovaraj sa našim AI-ch..." VerticalOptions="Center" TextColor="#333333"/>
                    <Image Source="heart_icon.png" HeightRequest="20" WidthRequest="20" VerticalOptions="Center"/>
                </StackLayout>
            </Frame>
            <!-- Settings Icon -->
            <Image Grid.Column="1" Source="settings_icon.png" HeightRequest="30" WidthRequest="30" VerticalOptions="Center" Margin="0,0,10,0"/>
        </Grid>

        <!-- Main Content Section -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="20,0,20,20" Spacing="20">
                <!-- Welcome Message -->
                <Label Text="Dobrodošao/la nazad, Alex!" FontSize="26" FontAttributes="Bold" TextColor="#333333" Margin="0,10,0,0"/>

                <!-- Community and Diary Buttons -->
                <StackLayout Orientation="Horizontal" Spacing="15" HorizontalOptions="FillAndExpand">
                    <!-- Community Button -->
                    <Frame CornerRadius="15" HasShadow="False" BackgroundColor="#A7ED8D" Padding="20" HorizontalOptions="FillAndExpand">
                        <StackLayout Spacing="10" HorizontalOptions="Center" VerticalOptions="Center">
                            <Image Source="community_icon.png" HeightRequest="40" WidthRequest="40"/>
                            <Label Text="Zajednica" TextColor="#333333" FontSize="18" FontAttributes="Bold"/>
                        </StackLayout>
                    </Frame>
                    <!-- Diary Button -->
                    <Frame CornerRadius="15" HasShadow="False" BackgroundColor="#CCCCFF" Padding="20" HorizontalOptions="FillAndExpand">
                        <StackLayout Spacing="10" HorizontalOptions="Center" VerticalOptions="Center">
                            <Image Source="diary_icon.png" HeightRequest="40" WidthRequest="40"/>
                            <Label Text="Dnevnik" TextColor="#333333" FontSize="18" FontAttributes="Bold"/>
                        </StackLayout>
                    </Frame>
                </StackLayout>

                <!-- Daily Mood Tracker -->
                <VerticalStackLayout Spacing="10">
                    <Label Text="Dnevni tracker raspoloženja" FontSize="20" FontAttributes="Bold" TextColor="#333333"/>
                    <Frame CornerRadius="15" HasShadow="False" BackgroundColor="White" Padding="15">
                        <VerticalStackLayout Spacing="10">
                            <Label Text="Kako se osećaš danas?" TextColor="#333333" FontSize="16"/>
                            <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Spacing="15">
                                <Image Source="mood_sad_cry.png" HeightRequest="40" WidthRequest="40"/>
                                <Image Source="mood_sad.png" HeightRequest="40" WidthRequest="40"/>
                                <Image Source="mood_neutral.png" HeightRequest="40" WidthRequest="40"/>
                                <Image Source="mood_happy.png" HeightRequest="40" WidthRequest="40"/>
                                <Image Source="mood_very_happy.png" HeightRequest="40" WidthRequest="40"/>
                            </StackLayout>
                        </VerticalStackLayout>
                    </Frame>
                </VerticalStackLayout>

                <!-- Exercises Section -->
                <VerticalStackLayout Spacing="10">
                    <Label Text="Vežbe :" FontSize="20" FontAttributes="Bold" TextColor="#333333"/>
                    <!-- Deep Breathing Exercise -->
                    <Frame CornerRadius="25" HasShadow="False" BackgroundColor="White" Padding="15" HeightRequest="80">
                        <Grid ColumnDefinitions="Auto, *, Auto">
                            <Image Grid.Column="0" Source="breathing_icon.png" HeightRequest="40" WidthRequest="40" VerticalOptions="Center"/>
                            <VerticalStackLayout Grid.Column="1" VerticalOptions="Center" Margin="15,0">
                                <Label Text="Duboko disanje" FontSize="18" FontAttributes="Bold" TextColor="#333333"/>
                                <Label Text="Završeno 80%" FontSize="14" TextColor="#666666"/>
                            </VerticalStackLayout>
                            <ProgressBar Grid.Column="2" Progress="0.8" WidthRequest="50" HeightRequest="50" ProgressColor="#A7ED8D" BackgroundColor="#E0E0E0" Rotation="270" HorizontalOptions="End" VerticalOptions="Center"/>
                            <!-- Placeholder for circular progress, adjust as needed -->
                        </Grid>
                    </Frame>
                    <!-- Sleeping Exercise -->
                    <Frame CornerRadius="25" HasShadow="False" BackgroundColor="White" Padding="15" HeightRequest="80">
                        <Grid ColumnDefinitions="Auto, *, Auto">
                            <Image Grid.Column="0" Source="sleep_icon.png" HeightRequest="40" WidthRequest="40" VerticalOptions="Center"/>
                            <VerticalStackLayout Grid.Column="1" VerticalOptions="Center" Margin="15,0">
                                <Label Text="Spavanje" FontSize="18" FontAttributes="Bold" TextColor="#333333"/>
                                <Label Text="Završeno 100%" FontSize="14" TextColor="#666666"/>
                            </VerticalStackLayout>
                            <ProgressBar Grid.Column="2" Progress="1.0" WidthRequest="50" HeightRequest="50" ProgressColor="#CCCCFF" BackgroundColor="#E0E0E0" Rotation="270" HorizontalOptions="End" VerticalOptions="Center"/>
                            <!-- Placeholder for circular progress, adjust as needed -->
                        </Grid>
                    </Frame>
                </VerticalStackLayout>
            </VerticalStackLayout>
        </ScrollView>

        <!-- Bottom Navigation Bar -->
        <Grid Grid.Row="2" ColumnDefinitions="*, *, *, *" BackgroundColor="White" Padding="0,10" VerticalOptions="End">
            <StackLayout Grid.Column="0" HorizontalOptions="Center" VerticalOptions="Center">
                <Image Source="menu_icon.png" HeightRequest="30" WidthRequest="30"/>
            </StackLayout>
            <StackLayout Grid.Column="1" HorizontalOptions="Center" VerticalOptions="Center">
                <Image Source="message_icon.png" HeightRequest="30" WidthRequest="30"/>
            </StackLayout>
            <StackLayout Grid.Column="2" HorizontalOptions="Center" VerticalOptions="Center">
                <Image Source="calendar_icon.png" HeightRequest="30" WidthRequest="30"/>
            </StackLayout>
            <StackLayout Grid.Column="3" HorizontalOptions="Center" VerticalOptions="Center">
                <Image Source="profile_icon.png" HeightRequest="30" WidthRequest="30"/>
            </StackLayout>
        </Grid>
    </Grid>
</ContentPage>
